<p id="notice"><%= notice %></p>

<h1 class="color">LIST OF SCHOOLS</h1><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>SCHOOL NAME</th>
      <th>ADDRESS</th>
      <th>CITY</th>
      <th>STATE</th>
      <th>PINCODE</th>
      <th>AFFILIATED BOARD</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.SCHOOLNAME %></td>
        <td><%= school.ADDRESS %></td>
        <td><%= school.CITY %></td>
        <td><%= school.STATE %></td>
        <td><%= school.PINCODE %></td>
        <td><%= school.AFFILIATEDBOARD %></td>
        <td><%= link_to 'EDIT', edit_school_path(school) %></td>
       <!--  <td><%= link_to 'DESTROY', school, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <!-- <td><%= link_to 'Show', school %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="button"><%= link_to 'CREATE SCHOOL', new_school_path %></button>
